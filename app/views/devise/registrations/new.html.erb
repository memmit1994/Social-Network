<div id="login-page">
    <div class="container">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: 'form-login'}) do |f| %>
            <h2 class="form-login-heading">sign in now</h2>
            <div class="login-wrap">
                <% if resource.errors.any? %>
                    <div id="error_explanation">
                        <h2><%= pluralize(resource.errors.count, "error") %> occured in Registration:</h2>


                        <% resource.errors.full_messages.each do |message| %>
                            <div class="alert alert-danger" style="padding:0.7em;"><%= message %></div>
                        <% end %>

                    </div>
                <% end %>

                <%= f.text_field :fname, class: 'form-control', placeholder: 'First Name' %><br/>

                <%= f.text_field :lname, class: 'form-control', placeholder: 'Last Name' %><br/>

                <%= f.text_field :nickname, class: 'form-control', placeholder: 'Nickname' %><br/>
                <%= f.select :gender, options_for_select(User.genders.keys), {}, class: 'form-control' %><br/>
                <%= f.date_select :birthdate, {:start_year => 1950, :end_year => 2016}, style: 'margin-bottom:1em;' %>
                <br/>

                <%= f.text_field :hometown, class: 'form-control', placeholder: 'Hometown' %><br/>

                <%= f.select :marital_status, options_for_select(User.marital_statuses.keys), {}, class: 'form-control' %>
                <br/>

                <%= f.text_area :bio, class: 'form-control', placeholder: 'About me' %><br/>
                <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %><br/>
                <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password' %>
                <br/>

                <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Password Confrimation' %>
                <br/>

                <div style="margin-bottom:1em;">

                </div>
                <%= button_tag(type: 'submit', class: 'btn btn-theme btn-block') do %>
                    <i class="fa fa-lock"></i> SIGN UP
                <% end %>
                <hr>


                <div class="registration">
                    already have an account?<br/>
                    <%= link_to "Log in", new_session_path(resource_name), style: 'text-decoration:none;' %>
                    <br/>
                </div>

            </div>
        <% end %>

    </div>
</div>



<!-- js placed at the end of the document so the pages load faster -->
<script src="/assets/js/jquery.js"></script>
<script src="/assets/js/bootstrap.min.js"></script>

